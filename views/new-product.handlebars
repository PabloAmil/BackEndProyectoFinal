<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Bokor&family=Metal&family=Protest+Guerrilla&family=Roboto:wght@100;300&display=swap"
        rel="stylesheet">
    <title>New product</title>
</head>

<body>

    <h1>Enter new product details</h1>
    <form action="/api/products" method="post" enctype="multipart/form-data" class="form">
        <input type="text" name="title" placeholder="Title">
        <br>
        <textarea name="description" placeholder="Product description"></textarea>
        <br>
        <input type="text" name="code" placeholder="Product code">
        <br>
        <input type="text" name="price" placeholder="Product price">
        <br>
        <input type="text" name="status" placeholder="Product status">
        <br>
        <input type="text" name="stock" placeholder="Product stock">
        <br>
        <input type="text" name="category" placeholder="Product category">
        <br>
        <input type="file" name="image" class="file">
        <br>
        <button type="submit">Create Product</button>
    </form>
</body>

</html>